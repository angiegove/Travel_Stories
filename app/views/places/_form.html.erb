<div class="container">
<%= form_for @place, :remote => true do |f| %>
  <div class="row">
    <div class="span3">
    <form>
        <fieldset>

<!--             <p>
                < %= f.label :trip %>
                < %= f.text_field%>
            </p> -->

            <div class="span3">
                <%= f.label :title %>
                <%= f.text_field :title, :autofocus => true, :placeholder => 'Title'  %>
            </div>

            <div class="span3">
                <%= f.label :date %>
                <%= f.text_field :date, :placeholder => 'Date'%>
            </div>

            <div class="span3">
                <%= f.hidden_field :latitude %>
                <!-- f.hidden -->
            </div>

            <div class="span3">
                <%= f.hidden_field :longitude %>
            </div>

            <div class="controls">
                <!-- image upload -->
                <%= image_tag(@place.image) if @place.image? %>
                <%= f.label :image, 'Image' %>
                <%= f.file_field :image %>
            </div>

            <div class="controls">
                <!-- image upload -->
                <%= image_tag(@place.image2) if @place.image2? %>
                <%= f.label :image2, 'Image' %>
                <%= f.file_field :image2 %>
            </div>

            <div class="controls">
                <!-- image upload -->
                <%= image_tag(@place.image3) if @place.image3? %>
                <%= f.label :image3, 'Image' %>
                <%= f.file_field :image3 %>
            </div>

            <div class="span3">
                <%= f.label :story %>
                <%= f.text_area :story, :class => 'class="span3"', :placeholder => ' My story goes something like this' %>
            </div>

            <%= f.submit 'Add My Story' %>
        </fieldset>

    </form>
  </div>
  </div>


 <% end %>
</div>

